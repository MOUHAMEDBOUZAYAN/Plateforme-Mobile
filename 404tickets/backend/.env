# Configuration du serveur
NODE_ENV=development
PORT=5000

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/404-tickets
# Pour MongoDB Atlas (production) :
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/404-tickets

# JWT Configuration
JWT_SECRET=votre_super_secret_jwt_key_ici_changez_moi
JWT_EXPIRATION=30d

# Configuration CORS (optionnel)
CORS_ORIGIN=http://localhost:3000,http://10.0.2.2:3000

# Configuration Email (pour notifications futures)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre-email@gmail.com
EMAIL_PASSWORD=votre-mot-de-passe-app

# Configuration de stockage de fichiers (optionnel)
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# Configuration Redis (pour le cache - optionnel)
REDIS_URL=redis://localhost:6379

# Configuration de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# URLs autorisées pour CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://10.0.2.2:3000

# Configuration de déploiement
DEPLOYMENT_URL=https://votre-app.herokuapp.com